<Grid x:Class="GameRes.Formats.GUI.CreateAOSWidget"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:s="clr-namespace:GameRes.Formats.Strings"
      xmlns:p="clr-namespace:GameRes.Formats.Properties">
    <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Label Content="Description" Target="{Binding ElementName=Version}" Grid.Column="0" Margin="0"/>
    <TextBox Text="{Binding Source={x:Static p:Settings.Default}, Path=AOSDescription, Mode=TwoWay}" Width="200" Grid.Column="1" Margin="0"/>
</Grid>
